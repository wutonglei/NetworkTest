<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>


    <Button
        android:id="@+id/btn_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path的使用_其实就是替换url中的某个值" />

    <Button
        android:id="@+id/btn_path_int"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="path的使用-区别 int和String  int integer 都报错" />

    <Button
        android:id="@+id/btn_gson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gson的使用" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="query——?后的参数 " />

    <Button
        android:id="@+id/btn_querymap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="querymap" />

    <Button
        android:id="@+id/btn_filed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field post的使用" />

    <Button
        android:id="@+id/btn_filedmap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FieldMap post的使用" />
  <Button
        android:id="@+id/btn_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开封装的" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件上传下载没试过 断点续传"
        android:textStyle="bold" />

    <!--    //    Path  Path_Int  Gson  Query   QueryMap    Field   FieldMap-->
</LinearLayout>